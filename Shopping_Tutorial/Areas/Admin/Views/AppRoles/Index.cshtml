@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    @{
        ViewData["Title"] = "Roles";
    }
    <h5>List Roles</h5>
    <p>
        <a asp-action="Create">Create Role</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Name</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="AppRoles" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="AppRoles" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
            }
       
    </tbody>
</table>